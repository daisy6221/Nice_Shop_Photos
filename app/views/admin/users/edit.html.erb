<div class="container">
  <div class="row mx-auto">

    <div class="col-md-11 my-3">
      <h3 class="text-center">ユーザー情報編集</h4>

      <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
      <div class="form-group">
        <%= f.label :image, "プロフィール画像" %>
        <%= f.file_field :profile_image, class: "form-control-file", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :name, "ユーザー名(半角英数字3~30字)" %>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      <div class="form-group">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
      <div class="d-grid gap-2 my-2">
        <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
        <%= link_to "退会", admin_user_path(@user), method: :delete, "data-confirm" => "会員の退会処理を行いますか？", class: "btn btn-danger" %>
      </div>
      <% end %>

    </div>
  </div>
</div>




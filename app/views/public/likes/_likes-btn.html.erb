<% if post.liked_by?(current_user) %>
  <%= link_to post_likes_path(post), method: :delete, style: "color: red;", remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= post.likes.count %>
  <% end %>
<% else %>
  <%= link_to post_likes_path(post), method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= post.likes.count %>
  <% end %>
<% end %>
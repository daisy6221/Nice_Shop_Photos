<% if post.liked_by?(current_user) %>
  <%= link_to post_likes_path(post), method: :delete, style: "color: red;" do %>
    <i class="fas fa-heart"></i>
    <%= post.likes.count %>
  <% end %>
<% else %>
  <%= link_to post_likes_path(post), method: :post do %>
    <i class="fas fa-heart"></i>
    <%= post.likes.count %>
  <% end %>
<% end %>
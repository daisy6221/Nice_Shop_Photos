<div class="flex-row d-grid gap-2 my-3">
  <%= form_with(model: [post, post_comment], local: false) do |f| %>
    <%= f.text_area :comment, rows:'2', placeholder: "コメントを入力(100字まで)", class: "w-75", id: "comment_textarea" %>
    <div>
      <%= f.submit "送信", class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
</div>

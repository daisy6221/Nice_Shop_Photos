<div class="container">
  <div>
    <h3 class="my-3 text-center">投稿一覧</h3>
    <%= link_to new_post_path, class: "btn-lg btn-primary" do %>
      新規投稿 <i class="fa-solid fa-file-circle-plus"></i>
    <% end %>
  </div>
  <div class="row no-gutters">
    <%= render "public/posts/sidebar", tag_list: @tag_list %>

    <div class="col-md-8">
      <div class="my-2 text-center">
        <%= link_to "新しい順", posts_path(latest: "true") %>
        |<%= link_to "古い順", posts_path(old: "true") %>
        |<%= link_to "いいね順", posts_path(popular: "true") %>
      </div>
      <%= render 'public/posts/index', posts: @posts %>
    </div>
    <div class="pagination justify-content-center">
      <%= paginate @posts %>
    </div>

  </div>
</div>
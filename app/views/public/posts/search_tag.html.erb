<div class="container">
  <h3 class="my-3 text-center">タグが<%= @tag.name %>の投稿一覧</h3>
  <div class="row">
    <%= render "public/posts/sidebar", tag_list: @tag_list %>

    <% unless @tag.posts.present? %>
      <div class="col-md-6">
        <p class="my-3 text-center"><%= @tag.name %> のタグ付けがされた投稿はありません</p>
      </div>
    <% else %>
      <div class="col-md-8">
        <div class="my-2 text-center">
          <%= link_to "新しい順", tag_search_path({ latest: "true", tag_id: params[:tag_id] }), class: "link" %>
          |<%= link_to "古い順", tag_search_path({ old: "true", tag_id: params[:tag_id] }), class: "link" %>
          |<%= link_to "いいね順", tag_search_path({ popular: "true", tag_id: params[:tag_id] }), class: "link" %>
        </div>
        <%= render "public/posts/index", posts: @posts %>
      </div>
      <div class="mt-3 mx-auto">
        <%= paginate @posts, theme: 'bootstrap-5' %>
      </div>
    <% end %>

  </div>
</div>
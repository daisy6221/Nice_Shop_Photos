<div class="container">
  <div class="row mx-auto">
    <%= render 'layouts/errors', obj: @user %>
    <div class="col-md-11 my-3">
      <h4>ユーザー情報編集</h4>

      <%= form_with model: @user, url: user_path, method: :patch do |f| %>

      <div class="form-group">
        <%= f.label :image, "プロフィール画像" %>
        <%= f.file_field :profile_image, class: "form-control-file", accept: 'image/*' %>
      </div>

      <div class="form-group">
        <%= f.label :name, "ユーザー名" %>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction, "自己紹介" %>
        <%= f.text_area :introduction, class: "form-control"%>
      </div>
      <div class="my-2">
        <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
      </div>
      <% end %>

    </div>
  </div>
</div>
<div class="container">
  <div class="row mx-auto">
    <%= render 'layouts/errors', obj: @user %>
    <div class="col-md-11 my-3">
      <h4 style="color: #696969;">ユーザー情報編集</h4>

      <%= form_with model: @user, url: user_path, method: :patch do |f| %>

      <div class="form-group">
        <%= f.label :image, "プロフィール画像" %>
        <%= f.file_field :profile_image, class: "form-control-file", accept: 'image/*' %>
      </div>

      <div class="form-group">
        <%= f.label :name, "ユーザー名(半角英数字3~30字)" %>
        <span class="mb-2 btn btn-danger btn-sm">必須</span>
        <%= f.text_field :name, autofocus: true, class: "form-control mb-3" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction, "自己紹介" %>
        <%= f.text_area :introduction, class: "form-control"%>
      </div>
      <div class="d-grid gap-2 my-2">
        <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
        <%= link_to "退会する", user_path, method: :delete, "data-confirm" => "本当に退会しますか？", class: 'btn btn-danger' %>
      </div>
      <% end %>

    </div>
  </div>
</div>
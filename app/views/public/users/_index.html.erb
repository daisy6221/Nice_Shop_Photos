<table class="table table-hover">
  <thead>
    <tr>
      <th>プロフィール画像</th>
      <th>ユーザー名</th>
      <th>自己紹介</th>
    </tr>
  </thead>
  <% users.each do |user| %>
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(user) do %>
          <%= image_tag user.get_profile_image(100, 100), class: "rounded-circle" %>
        <% end %>
      </td>
      <td>
        <%= link_to user_path(user) do %>
          <%= user.name %>
        <% end %>
      </td>
      <td><%= user.introduction %></td>
    </tr>
  </tbody>
  <% end %>
</table>
<div class="pagination justify-content-center">
  <%= paginate users %>
</div>